<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-tr from-red-100 via-white to-slate-200 min-h-screen font-sans">
  <%- include('../partials/nav') %>

  <!-- ✅ Floating Alert Message -->
  <% if (message || errorMessage) { %>
  <div id="alertBox"
    class="fixed left-1/2 transform -translate-x-1/2 z-50 px-6 py-3 rounded shadow-md border text-center text-sm font-medium
      <%= message ? 'bg-green-100 text-green-800 border-green-300' : 'bg-red-100 text-red-800 border-red-300' %>"
    style="top: 64px;">
    <%= message || errorMessage %>
  </div>
<% } %>




  <!-- ✅ Main Content -->
  <div class="flex items-center justify-center py-16 px-4">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-xl p-8 text-center transition-all duration-300">

      <!-- Profile Header -->
      <div class="flex flex-col items-center mb-8">
        <div class="w-16 h-16 rounded-full shadow-md bg-red-100 flex items-center justify-center border-2 border-red-400">
          <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h2 class="mt-10 text-2xl font-bold text-gray-800">Hello, <%= user.firstName %>!</h2>
        <p class="text-gray-500 text-sm mt-1">Here’s your profile information</p>
      </div>

      <!-- Profile Info -->
      <div class="space-y-6 text-gray-700 mb-8">
        <div>
          <label class="block text-sm font-semibold text-gray-500 mb-1">Full Name</label>
          <div class="text-lg font-medium"><%= user.firstName %> <%= user.lastName %></div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-500 mb-1">Email</label>
          <div class="text-lg font-medium"><%= user.email %></div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-500 mb-1">User Type</label>
          <div class="inline-block px-4 py-1 rounded-full bg-red-100 text-red-600 text-sm font-semibold">
            <%= user.userType === 'host' ? 'Host' : 'Guest' %>
          </div>
        </div>
      </div>

      <!-- Edit Button -->
      <form action="/editprofile" method="get">
        <button type="submit"
          class="bg-gradient-to-r from-red-500 to-red-400 hover:from-red-600 hover:to-red-500 text-black font-semibold py-2 px-6 rounded-full shadow hover:shadow-lg transition duration-300">
          Edit Your Profile
        </button>
      </form>
    </div>
  </div>

  <!-- ✅ Auto-hide message -->
  <script>
    const alertBox = document.getElementById("alertBox");
    if (alertBox) {
      setTimeout(() => {
        alertBox.style.opacity = "0";
        alertBox.style.transition = "opacity 0.5s ease";
        setTimeout(() => alertBox.remove(), 500);
      }, 3000);
    }
  </script>
</body>
</html>
