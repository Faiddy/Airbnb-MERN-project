<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-tr from-red-100 via-white to-slate-200 min-h-screen font-sans">
  <%- include('../partials/nav') %>

  <div class="flex items-center justify-center py-12 px-4">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-xl p-6 sm:p-10 transition-all duration-300">
      <!-- Profile Header -->
      <div class="flex flex-col items-center mb-8">
       
        <h2 class="mt-10 text-2xl font-bold text-gray-800 ">Hello, <%= user.firstName %>!</h2>
        <p class="text-gray-500 text-sm mt-1">Welcome to your profile</p>
      </div>

      <!-- Profile Info -->
<div class="flex justify-center mt-6">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 text-gray-700 w-full max-w-md">
    <div>
      <label class="block text-sm font-semibold text-gray-500 mb-1">Full Name</label>
      <div class="text-base font-medium"><%= user.firstName %> <%= user.lastName %></div>
    </div>

    <div>
      <label class="block text-sm font-semibold text-gray-500 mb-1">Email</label>
      <div class="text-base font-medium"><%= user.email %></div>
    </div>

    <div class="sm:col-span-2">
      <label class="block text-sm font-semibold text-gray-500 mb-1">User Type</label>
      <div class="inline-block px-3 py-1 rounded-full bg-red-100 text-red-600 text-sm font-semibold">
        <%= user.userType === 'host' ? 'Host' : 'Guest' %>
      </div>
    </div>
  </div>
</div>


      <!-- âœ… Edit Profile Button -->
      <div class="mt-8 text-center">
        <form action="/profile/edit" method="get">
          <button type="submit" class="bg-gradient-to-r from-red-500 to-red-400 hover:from-red-600 hover:to-red-500 text-black font-bold py-2 px-6 rounded-full shadow-md hover:shadow-lg transition duration-300">
            Edit Your Profile
          </button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
