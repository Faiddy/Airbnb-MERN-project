<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Host Dashboard
    </h2>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-gray-100 p-6 rounded-lg shadow text-center">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Total Bookings</h3>
        <p class="text-3xl font-bold text-red-500"><%= totalBookings %></p>
      </div>
      <div class="bg-gray-100 p-6 rounded-lg shadow text-center">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Total Earnings</h3>
        <p class="text-3xl font-bold text-green-600">Rs<%= totalEarnings %></p>
      </div>
      <div class="bg-gray-100 p-6 rounded-lg shadow text-center">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Upcoming Bookings</h3>
        <p class="text-3xl font-bold text-blue-500"><%= upcomingBookings.length %></p>
      </div>
    </div>

    <!-- Recent Bookings -->
    <div class="mb-10">
      <h3 class="text-2xl font-semibold text-gray-800 mb-4">Recent Bookings</h3>
      <% if (upcomingBookings.length === 0) { %>
        <p class="text-gray-500">No upcoming bookings.</p>
      <% } else { %>
        <div class="overflow-auto">
          <table class="min-w-full bg-white border border-gray-200">
            <thead>
              <tr>
                <th class="py-2 px-4 border-b">Guest</th>
                <th class="py-2 px-4 border-b">Home</th>
                <th class="py-2 px-4 border-b">Date</th>
                <th class="py-2 px-4 border-b">Amount</th>
                <th class="py-2 px-4 border-b">Payment Method</th> <!-- ✅ Added -->
              </tr>
            </thead>
            <tbody>
              <% upcomingBookings.forEach(booking => { %>
                <tr>
                  <td class="py-2 px-4 border-b"><%= booking.guestName %></td>
                  <td class="py-2 px-4 border-b"><%= booking.houseName %></td>
                  <td class="py-2 px-4 border-b"><%= booking.date %></td>
                  <td class="py-2 px-4 border-b">Rs<%= booking.amount %></td>
                  <td class="py-2 px-4 border-b"><%= booking.paymentMethod %></td> <!-- ✅ Added -->
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>

    <!-- Link to Manage Homes -->
    <div class="text-center">
      <a href="/host/homes" class="bg-green-600 text-white px-6 py-3 rounded-lg">Manage Your Homes</a>
    </div>
  </main>
</body>
</html>
