  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const phoneSelect = document.querySelector("#phone");
      const phoneNumber = document.querySelector("#phoneNumber");
      const phoneFormat = document.querySelector("#phoneFormat");

      // Phone number formats for different countries
      const phoneFormats = {
        "+92": { // Pakistan
          pattern: /^[0-9]{10}$/,
          format: "3XX-XXXXXXX",
          example: "3001234567",
          message: "Enter 10 digits (e.g., 3001234567)"
        },
        "+1": { // US/Canada
          pattern: /^[0-9]{10}$/,
          format: "(XXX) XXX-XXXX",
          example: "1234567890",
          message: "Enter 10 digits (e.g., 1234567890)"
        },
        "+44": { // UK
          pattern: /^[0-9]{10,11}$/,
          format: "XXXX XXXXXX",
          example: "7123456789",
          message: "Enter 10-11 digits (e.g., 7123456789)"
        },
        "+61": { // Australia
          pattern: /^[0-9]{9}$/,
          format: "X XXX XXX XXX",
          example: "412345678",
          message: "Enter 9 digits (e.g., 412345678)"
        },
        "+91": { // India
          pattern: /^[0-9]{10}$/,
          format: "XXXXX XXXXX",
          example: "9876543210",
          message: "Enter 10 digits (e.g., 9876543210)"
        }
      };

      // Update format message when country changes
      phoneSelect.addEventListener('change', function() {
        const countryCode = this.value;
        if (phoneFormats[countryCode]) {
          phoneFormat.textContent = phoneFormats[countryCode].message;
          phoneNumber.placeholder = `Example: ${phoneFormats[countryCode].example}`;
        } else {
          phoneFormat.textContent = "Please select a country code";
          phoneNumber.placeholder = "Enter phone number";
        }
        phoneNumber.value = ''; // Clear the input when country changes
      });

      // Format phone number as user types
      phoneNumber.addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        const countryCode = phoneSelect.value;
        
        if (phoneFormats[countryCode]) {
          const format = phoneFormats[countryCode];
          
          // Apply formatting based on country
          if (countryCode === "+92") { // Pakistan
            if (value.length > 3) {
              value = value.slice(0, 3) + "-" + value.slice(3);
            }
          } else if (countryCode === "+1") { // US/Canada
            if (value.length > 6) {
              value = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6, 10)}`;
            } else if (value.length > 3) {
              value = `(${value.slice(0, 3)}) ${value.slice(3)}`;
            }
          } else if (countryCode === "+44") { // UK
            if (value.length > 4) {
              value = value.slice(0, 4) + " " + value.slice(4);
            }
          } else if (countryCode === "+61") { // Australia
            if (value.length > 1) {
              value = value.slice(0, 1) + " " + value.slice(1);
            }
            if (value.length > 5) {
              value = value.slice(0, 5) + " " + value.slice(5);
            }
          } else if (countryCode === "+91") { // India
            if (value.length > 5) {
              value = value.slice(0, 5) + " " + value.slice(5);
            }
          }
        }
        
        e.target.value = value;
      });

      // Validate phone number before form submission
      const form = document.querySelector('#bookingForm');
      if (form) {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          const countryCode = phoneSelect.value;
          const number = phoneNumber.value.replace(/\D/g, '');
          
          if (!countryCode) {
            alert('Please select a country code');
            return;
          }

          if (!phoneFormats[countryCode].pattern.test(number)) {
            alert(`Please enter a valid phone number for the selected country.\n${phoneFormats[countryCode].message}`);
            return;
          }

          const fullNumber = countryCode + number;
          const hiddenInput = document.createElement('input');
          hiddenInput.type = 'hidden';
          hiddenInput.name = 'fullPhone';
          hiddenInput.value = fullNumber;
          form.appendChild(hiddenInput);
          form.submit();
        });
      }

      // Show/hide CNIC and Passport fields based on nationality selection
      const nationalitySelect = document.getElementById("nationality");
      const cnicContainer = document.getElementById("cnicContainer");
      const passportContainer = document.getElementById("passportContainer");

      function updateIdFields() {
        const val = nationalitySelect.value.toLowerCase();
        if(val === "pakistan") {
          cnicContainer.style.display = "block";
          passportContainer.style.display = "none";
        } else if(val) {
          cnicContainer.style.display = "none";
          passportContainer.style.display = "block";
        } else {
          cnicContainer.style.display = "none";
          passportContainer.style.display = "none";
        }
      }

      nationalitySelect.addEventListener("change", updateIdFields);
      updateIdFields();
    });
  </script>
</body>
