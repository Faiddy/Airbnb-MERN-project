<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.min.css" />
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mx-auto max-w-lg mt-16 bg-white rounded-2xl shadow-xl p-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-red-600">Book This Home</h1>

    <% if (home) { %>
      <div class="mb-6 text-center">
        <% if (home.photo) { %>
          <img src="<%= home.photo %>" alt="<%= home.houseName %>" style="width: 20%; height: auto;" class="object-cover rounded-xl shadow mx-auto" />
        <% } %>
        <h2 class="text-2xl font-semibold mt-4 mb-2"><%= home.houseName %></h2>
        <p class="text-gray-700 mb-2"><strong>Location:</strong> <%= home.location %></p>
        <p class="text-gray-700 mb-4"><strong>Price per night:</strong> Rs <%= home.price %></p>
      </div>

      <form action="/store/book" method="POST" class="space-y-4" id="bookingForm">
        <input type="hidden" name="homeId" value="<%= home._id %>" />

        <label class="block font-semibold">From Date</label>
        <input type="date" name="dateFrom" required class="w-full border rounded px-3 py-2" />

        <label class="block font-semibold">To Date</label>
        <input type="date" name="dateTo" required class="w-full border rounded px-3 py-2" />

        <label class="block font-semibold">Full Name</label>
        <input type="text" name="fullName" required class="w-full border rounded px-3 py-2" />

        <label class="block font-semibold">Email</label>
        <input type="email" name="email" required class="w-full border rounded px-3 py-2" />

        <label class="block font-semibold">Phone</label>
        <div class="phone-input-container" style="position: relative; width: 100%;">
          <select id="phone" name="phone" required class="w-full border rounded px-3 py-2">
            <option value="">Select Country Code</option>
            <option value="+92">ðŸ‡µðŸ‡° Pakistan (+92)</option>
            <option value="+1">ðŸ‡ºðŸ‡¸ United States (+1)</option>
            <option value="+44">ðŸ‡¬ðŸ‡§ United Kingdom (+44)</option>
            <option value="+1">ðŸ‡¨ðŸ‡¦ Canada (+1)</option>
            <option value="+61">ðŸ‡¦ðŸ‡º Australia (+61)</option>
            <option value="+91">ðŸ‡®ðŸ‡³ India (+91)</option>
          </select>
          <input type="tel" id="phoneNumber" name="phoneNumber" required class="w-full border rounded px-3 py-2 mt-2" placeholder="Enter phone number" />
          <small id="phoneFormat" class="text-gray-500 mt-1 block"></small>
        </div>

        <label class="block font-semibold">Nationality</label>
        <select id="nationality" name="nationality" required class="w-full border rounded px-3 py-2">
          <option value="">Select Nationality</option>
          <option value="Pakistan">ðŸ‡µðŸ‡° Pakistan</option>
          <option value="United States">ðŸ‡ºðŸ‡¸ United States</option>
          <option value="United Kingdom">ðŸ‡¬ðŸ‡§ United Kingdom</option>
          <option value="Canada">ðŸ‡¨ðŸ‡¦ Canada</option>
          <option value="Australia">ðŸ‡¦ðŸ‡º Australia</option>
          <option value="India">ðŸ‡®ðŸ‡³ India</option>
        </select>

        <div id="cnicContainer" class="hidden">
          <label class="block font-semibold">CNIC</label>
          <input type="text" name="cnic" id="cnic" class="w-full border rounded px-3 py-2" placeholder="12345-1234567-1" />
        </div>

        <div id="passportContainer" class="hidden">
          <label class="block font-semibold">Passport Number</label>
          <input type="text" name="passport" id="passport" class="w-full border rounded px-3 py-2" placeholder="Enter passport number" />
        </div>

        <label class="block font-semibold">Payment Method</label>
        <select name="paymentMethod" required class="w-full border rounded px-3 py-2">
          <option value="">Select Payment Method</option>
          <option value="Credit Card">Credit Card</option>
          <option value="Debit Card">Debit Card</option>
          <option value="Cash">Cash</option>
          <option value="Bank Transfer">Bank Transfer</option>
        </select>

        <button type="submit" class="w-full bg-red-500 text-white font-bold py-3 rounded hover:bg-red-600 transition">
          Confirm Booking
        </button>
      </form>
    <% } else { %>
      <p class="text-center text-gray-500">Home details not found.</p>
    <% } %>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const phoneSelect = document.getElementById("phone");
      const phoneNumber = document.getElementById("phoneNumber");
      const phoneFormat = document.getElementById("phoneFormat");
      const nationalitySelect = document.getElementById("nationality");
      const cnicContainer = document.getElementById("cnicContainer");
      const passportContainer = document.getElementById("passportContainer");
      const cnicInput = document.getElementById("cnic");
      const passportInput = document.getElementById("passport");

      const phoneFormats = {
        "+92": { pattern: /^[0-9]{10}$/, example: "3001234567", message: "Enter 10 digits (e.g., 3001234567)" },
        "+1": { pattern: /^[0-9]{10}$/, example: "1234567890", message: "Enter 10 digits (e.g., 1234567890)" },
        "+44": { pattern: /^[0-9]{10,11}$/, example: "7123456789", message: "Enter 10-11 digits (e.g., 7123456789)" },
        "+61": { pattern: /^[0-9]{9}$/, example: "412345678", message: "Enter 9 digits (e.g., 412345678)" },
        "+91": { pattern: /^[0-9]{10}$/, example: "9876543210", message: "Enter 10 digits (e.g., 9876543210)" }
      };

      phoneSelect.addEventListener('change', function () {
        const code = this.value;
        if (phoneFormats[code]) {
          phoneFormat.textContent = phoneFormats[code].message;
          phoneNumber.placeholder = `Example: ${phoneFormats[code].example}`;
        } else {
          phoneFormat.textContent = "Please select a country code";
          phoneNumber.placeholder = "Enter phone number";
        }
        phoneNumber.value = '';
      });

      nationalitySelect.addEventListener("change", () => {
        const selected = nationalitySelect.value.trim();
        if (selected === "Pakistan") {
          cnicContainer.classList.remove("hidden");
          passportContainer.classList.add("hidden");
        } else if (selected !== "") {
          cnicContainer.classList.add("hidden");
          passportContainer.classList.remove("hidden");
        } else {
          cnicContainer.classList.add("hidden");
          passportContainer.classList.add("hidden");
        }
      });

      const form = document.getElementById("bookingForm");
      if (form) {
        form.addEventListener("submit", function (e) {
          e.preventDefault();

          const countryCode = phoneSelect.value;
          const number = phoneNumber.value.replace(/\D/g, '');
          const nationality = nationalitySelect.value;
          const cnic = cnicInput.value.trim();
          const passport = passportInput.value.trim();

          // Phone validation
          if (!countryCode || !phoneFormats[countryCode].pattern.test(number)) {
            alert(`Please enter a valid phone number.\n${phoneFormats[countryCode]?.message || ""}`);
            return;
          }

          // CNIC validation
          if (nationality === "Pakistan") {
            const cnicPattern = /^[0-9]{5}-[0-9]{7}-[0-9]{1}$/;
            if (!cnicPattern.test(cnic)) {
              alert("Please enter a valid CNIC in the format: 12345-1234567-1");
              return;
            }
          }

          // Passport validation
          if (nationality !== "Pakistan") {
            const passportPattern = /^[A-Za-z0-9]{6,}$/;
            if (!passportPattern.test(passport)) {
              alert("Please enter a valid Passport Number (at least 6 alphanumeric characters)");
              return;
            }
          }

          const fullPhone = countryCode + number;
          const hiddenInput = document.createElement('input');
          hiddenInput.type = 'hidden';
          hiddenInput.name = 'fullPhone';
          hiddenInput.value = fullPhone;
          form.appendChild(hiddenInput);

          form.submit();
        });
      }
    });
  </script>
</body>
</html>
